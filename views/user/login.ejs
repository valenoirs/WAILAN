<div class="row mt-5">
    <div class="col-6">
        <h1>Login</h1>
        <form method="POST" action="/login">
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <div class="row">
                    <input type="text" class="form-control" placeholder="Email" name="email" aria-describedby="emailHelp" required>
                </div>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <div class="row">
                    <input type="password" class="form-control" placeholder="Password" name="password">
                </div>
            </div>
            <button type="submit" class="btn btn-primary mb-3">Login</button>
            <p class="mb-5">Don't have account? <a href="/register">Register!</a>. Or you are an admin? <a href="/admin/login">Click here!</a></p>
            </form>
    </div>
</div>