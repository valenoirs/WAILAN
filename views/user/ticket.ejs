<div class="row justify-content-center mt-4">
    <h2>Daftar Tiket</h2>
</div>
<hr>
<div class="row justify-content-center mt-4">
    <div class="col">
      <a href="/" class="">Home</a>
    </div>
    <div class="col">
      <input class="form-control me-2" id="myInput" type="search" onkeyup="myFunction()" placeholder="Search" aria-label="Search">
    </div>
</div>
<div class="row justify-content-center mt-4">
  <table class="table table-striped table-hover" id="myTable">
    <thead class="table">
          <tr>
            <th style="width: 100px;" scope="col">#</th>
            <th scope="col">Subject</th>
            <!-- <th scope="col">Keterangan</th>
            <th scope="col">Fakultas</th> -->
            <th style="width: 200px;" scope="col">More</th>
          </tr>
        </thead>
        <tbody>
            <% tickets.forEach((ticket, i) => { %>
            <tr>
              <% if (ticket) { %>
               
              <% } else { %>

              <% } %> 
              <th scope="row"><%= i + 1 %> </th>
              <td>
                <h5><%= ticket.subject %></h5>
                <p><%= ticket.keterangan %></p>
                <h6><%= ticket.status; %></h6>
              </td>
              <td>
                <form method="POST" action="/ticket/delete?_method=DELETE">
                  <input type="hidden" id="angotaId" name="anggotaId" value="<%= ticket.anggotaId %>">
                  <button type="submit" class="btn btn-danger" onclick="return confirm('Are You Sure?')"><i class="bi bi-info-circle"></i> Hapus</button>
                </form>
              </td>
            </tr>
            <% }) %>
          </tbody>
      </table>
</div>