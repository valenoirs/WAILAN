<div class="row justify-content-center mt-4">
    <div class="col">
      <a href="/petugas" class="">Home</a>
    </div>
    <div class="col">
      <input class="form-control me-2" id="myInput" type="search" onkeyup="myFunction()" placeholder="Search" aria-label="Search">
    </div>
</div>
<div class="row justify-content-center mt-4">
  <table class="table table-striped table-hover" id="myTable">
    <thead class="table">
          <tr>
            <th style="width: 100px;" scope="col">#</th>
            <th style="width: 150px;" scope="col">Nama</th>
            <th scope="col">Ticket</th>
            <th style="width: 200px;" scope="col">More</th>
          </tr>
        </thead>
        <tbody>
            <% tickets.forEach((ticket, i) => { %>
            <tr>
              <% if (ticket.status === 'Menunggu') { %>
                <th scope="row"><%= i + 1 %> </th>
                <td><%= ticket.nameUser %></td>
                <td>
                  <a style="text-decoration: none;" href="/petugas/ticket/<%= ticket.idTicket %>">
                    <h5><%= ticket.subject %></h5>
                  </a>
                  <p><%= ticket.keterangan %></p>
                </td>
                <td>
                  <form class="d-inline" method="POST" action="/ticket/approve">
                    <input type="hidden" name="idTicket" value="<%= ticket.idTicket %>">
                    <button type="submit" class="btn btn-success" onclick="return confirm('Are You Sure?')"><i class="bi bi-info-circle"></i></button>
                  </form>
                  <form class="d-inline" method="POST" action="/ticket/decline">
                    <input type="hidden" name="idTicket" value="<%= ticket.idTicket %>">
                    <button type="submit" class="btn btn-danger" onclick="return confirm('Are You Sure?')"><i class="bi bi-info-circle"></i></button>
                  </form>
                </td>
                </tr>
              <% } else if (ticket.status === 'Diterima') { %>
                <th scope="row"><%= i + 1 %> </th>
                <td><%= ticket.nameUser %></td>
                <td>
                  <a href="/petugas/ticket/<%= ticket.idTicket %>">
                    <h5><%= ticket.subject %></h5>
                  </a>
                  <p><%= ticket.keterangan %></p>
                </td>
                <td>
                  <a href="/petugas/chatroom/<%= ticket.idChatroom %>" class="btn btn-primary"><i class="bi bi-info-circle"></i> Hubungi</a>
                </td>
                </tr>
              <% } else if(ticket.status === 'Ditolak') { %> 
                <th scope="row"><%= i + 1 %> </th>
                <td><%= ticket.nameUser %></td>
                <td>
                  <a href="/petugas/ticket/<%= ticket.idTicket %>">
                    <h5><%= ticket.subject %></h5>
                  </a>
                  <p><%= ticket.keterangan %></p>
                </td>
                <td>
                    <button class="btn text-danger" disabled><i class="bi bi-info-circle"></i> Ditolak</button>
                </td>
                </tr>
              <% } else if(ticket.status === 'Dibatalkan') { %> 
                <th scope="row"><%= i + 1 %> </th>
                <td><%= ticket.nameUser %></td>
                <td>
                  <a href="/petugas/ticket/<%= ticket.idTicket %>">
                    <h5><%= ticket.subject %></h5>
                  </a>
                  <p><%= ticket.keterangan %></p>
                </td>
                <td>
                    <button class="btn text-danger" disabled><i class="bi bi-info-circle"></i> Dibatalkan</button>
                </td>
                </tr>
              <% } else if(ticket.status === 'Selesai') { %>
                <th scope="row"><%= i + 1 %> </th>
                <td>
                  <a href="/ticket/<%= ticket.idTicket %>">
                    <h5><%= ticket.subject %></h5>
                  </a>
                  <p><%= ticket.keterangan %></p>
                  <h6>Status : <%= ticket.status; %></h6>
                </td>
                <td>
                  <button class="btn text-success" disabled><i class="bi bi-info-circle"></i> Selesai</button>
                </td>
                </tr>
              <% } %>
            <% }) %>
          </tbody>
      </table>
</div>